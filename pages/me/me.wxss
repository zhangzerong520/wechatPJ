page {
  background-color: #f3f3f3;
}

.Userinfo {
  display: flex;
  flex-direction: row;
  background: white;
  padding: 40rpx 0 30rpx 20rpx;
  height: 160rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  margin-left: 10px;
}

.userInfo {
  font-size: 17px;
  color: #9b9999;
  margin: 6px 0 0 12px;
}

.userInfo .nickName {
  font-size: 19px;
  font-weight: bolder;
  color: rgb(14, 13, 13);
}

.open image {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 30rpx;
  margin-top: 80rpx;
}

.userInfo .evm {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #a59d9d;
}

.userInfo .number {
  margin-top: 8px;
}

.userInfo .evm image {
  width: 36rpx;
  height: 36rpx;
  padding-left: 40rpx;
  padding-top: 20rpx;
}

.btstyle {
  width: 60%;
  background: green;
  color: white;
  margin-top: 200rpx;
}

.hr {
  width: 100%;
  height: 60rpx;
  background: #f3f3f3;
}

.nav {
  display: flex;
  background-color: white;
  flex-direction: row;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.nav .item {
  height: 120rpx;
  width: 170rpx;
  display: flex;
  flex-direction: column;
  margin-left: 12rpx;
}

.nav .item image {
  width: 80rpx;
  height: 80rpx;
  padding-left: 46rpx;
}

.nav .item .text {
  padding-top: 6rpx;
  font-size: 26rpx;
  color: rgb(69, 70, 71);
  text-align: center;
}

.titles {
  font-size: 34rpx;
  font-weight: bold;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  color: #ff6a6a;
}

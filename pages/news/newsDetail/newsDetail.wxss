.comment {
  display: flex;
  flex-direction: row;
  height: 180rpx;
}

.comment image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.comment .people_info {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-left: 10rpx;
}

.people_info .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.comment .people_info .neirong {
  font-size: 30rpx;
  margin-top: 10rpx;
}

.right {
  position: absolute;
  right: 30rpx;
}

.right gengduo {
  width: 50rpx;
  height: 50rpx;
}

.bts, .tops {
  display: flex;
  flex-direction: row;
}

.bts .times {
  font-size: 26rpx;
  color: #918b8b;
  margin-top: 10rpx;
}

.bts .zan {
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 30rpx;
  color: #918b8b;
  font-size: 28rpx;
}

.bts image {
  width: 40rpx;
  height: 40rpx;
}

.zan .pic {
  float: left;
}

.zan .words {
  float: left;
  margin-top: 30rpx;
  margin-left: 10rpx;
}

.tops .gengduo {
  position: absolute;
  right: 30rpx;
}

.tops .gengduo image {
  width: 50rpx;

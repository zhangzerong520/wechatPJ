
.title image{
  width: 100%;
  height: 160rpx;
}
.big_img{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.big_img .img_box{
  width: 94%;
  height: 280rpx;
  box-shadow: 0px 2rpx 2rpx 2rpx #adadad;
  margin-left: 20rpx;
}
.big_img image{
  padding-left: 8rpx;
  padding-top: 10rpx;
  width: 98%;
  height: 260rpx;
}
.big_img text{
  padding-top: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color:rgb(91, 92, 94);
}

.small{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-left: 22rpx;
  width: 46%;
  height: 340rpx;
  
 
}
.small .small_box{
  width: 96%;
  height: 300rpx;
  box-shadow: 0px 2rpx 2rpx 2rpx #adadad;
  border-radius: 10rpx;
}
.small .small_box image{
  padding-top: 10rpx;
  padding-left: 10rpx;
  width: 94%;
  height: 280rpx;
  border-radius: 10rpx;
}
.small  text{
  padding-top: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color:rgb(91, 92, 94);
}
.small_row{
  display: flex;
  flex-direction: row;
}
.small_column{
  display: flex;
  flex-direction: column;

}
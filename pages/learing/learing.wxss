.img {
  margin-top: 6rpx;
}

.img image {
  width: 100%;
  height: 400rpx;
}

.box {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 94%;
  
  margin-left: 20rpx;
  border-bottom:#f1e8af 2rpx dotted; 
}

.box .title {
  margin-top: 30rpx;
  font-size: 32rpx;
  max-width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.box .time {
  position: absolute;
  right:30rpx;
  margin-top: 36rpx;
  font-size: 26rpx;
  color: rgb(41, 138, 230);
}

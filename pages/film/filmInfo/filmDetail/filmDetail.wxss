.bg-blur image {
  height: 440rpx;
  width: 100%;
}

.bg-blur {
  background-size: cover;
  filter: blur(7px);
}

.canve {
  width: 100%;
  height: 440rpx;
  top: 2rpx;
  background: rgb(184, 179, 179);
  position: absolute;
  opacity: 0.3;
}

.movie_info {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 1rpx;
}

.movie_info .img {
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.movie_info .img image {
  width: 240rpx;
  height: 300rpx;
}

.movie_detail {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.movie_detail .top_info {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  color: white;
  font-weight: bold;
}
.movie_detail .top_info .tx_title {
  font-size: 32rpx;
}
.movie_detail .top_info .tx_intro {
  font-size: 24rpx;
}
.movie_detail .will_watch{
 color:rgb(236, 201, 41);
 font-size: 36rpx;
 font-weight: bold;
 margin-top: 14rpx;
 margin-bottom: 10rpx;

}

.movie_detail .moviesDt view{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  color:#d6d6d6;
  font-size: 24rpx;
}
.like_score{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  position: absolute;
  top:360rpx;
  margin-left: 3rpx;

}
.liked{
  width: 320rpx;
  height: 60rpx;
  background: #b6afafdc;
  border-radius: 10rpx;
  margin-left: 40rpx;

}
.liked .img{
  float:left;
  margin-left: 100rpx;
  margin-top: 4rpx;

}
.liked image{
  width: 32rpx;
  height: 32rpx;
  padding-top: 6rpx;
}
.liked .word{
  float: left;
  color:white;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-top: 8rpx;
}
.movie_intro{
  font-size: 30rpx;
  margin:14rpx 30rpx 0 30rpx;
  
}

.movie_show{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.movie_show .title{
margin-left: 30rpx;
font-size: 30rpx;
font-weight: bold;
margin-top: 10rpx;
}

.movie_show .show_number .num{
  margin-top: 18rpx;
  position: absolute;
  right: 64rpx;
  font-size: 28rpx;
  color:rgb(111, 116, 119); 
}
.movie_show .show_number image{
  margin-top: 20rpx;
  position: absolute;
  right: 30rpx;
  width: 34rpx;
  height: 34rpx;
}
.movie_box{
  display: flex;
  flex-direction: row;
}
.movie_box .movie{
  display: flex;
  flex-direction: column;
  margin:30rpx 0 0 30rpx;
  width: 160rpx;
  height: 280rpx; 
}
.movie_box .movie image{
  width: 160rpx;
  height: 200rpx;
}
.movie_box .movie .time{
margin-top: 4rpx;
font-size: 24rpx;
color:#a1a1a1;
text-align: center;
}

.movie_box .movie .movie_name{
  font-size: 28rpx;
  padding-top: 2rpx;
  max-width: 220rpx; 
  overflow: hidden;   
  text-overflow: ellipsis; 
  white-space: nowrap; 
  text-align: center;
}
.hr3{
  height:2rpx;
  background-color: #e7e2e2;
  margin-top: 14rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.movie_box .photo{
  width: 262rpx;
  height: 182rpx; 
  margin:30rpx 0 0 30rpx;
}
.movie_box .photo image{
  width: 260rpx;
  height: 220rpx;
}
.hrs{
  height:14rpx;
  background-color: #f3f3f3;
  margin-top: 20rpx;
}
.gg{
  margin-top: 40rpx;
  height: 40rpx;
}

